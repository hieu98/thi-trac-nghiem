<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cgr">
    <TextView
        android:padding="5dp"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/txtchuc"
        android:textSize="30sp"
        android:textColor="#FFEB3B"
        android:text="@string/chuc_mung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtkq"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txtchuc"
        android:text="@string/kqcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#FF0600"
        android:id="@+id/kq_lam"
        android:layout_marginTop="50sp"
        android:layout_centerInParent="true"
        android:text="kết quả"
        android:textSize="60sp"
        android:layout_below="@+id/txtkq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:foregroundGravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:background="#30E8FF"
        android:layout_centerInParent="true"
        android:id="@+id/btn_backmain"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:text="Quay về trang chủ" />

</RelativeLayout>